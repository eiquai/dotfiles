Config { 

        -- APPEARANCE
        --font = "xft:RobotoMono-Regular:size=9:antialiasing=false"
        font = "xft:Roboto Mono for Powerline:size=8:antialiasing=true"
        , additionalFonts = ["xft:FontAwesome:size=8"]
        , textOffset = -1
        , iconOffset = -1
        , iconRoot = "."
        , alpha = 1
        , position = TopW L 100
        --font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
        , bgColor = "#272822"
        , fgColor = "#e0e0e0"
        , border = TopB 0
        , borderColor = "#272822"


        -- GENERAL BEHAVIOR
        , lowerOnStart      =   True    -- send to bottom of window stack on start
        , hideOnStart       =   False   -- start with window unmapped (hidden)
        , allDesktops       =   True    -- show on all desktops
        , overrideRedirect  =   True    -- set the Override Redirect flag (Xlib)
        , pickBroadest      =   True    -- choose display dynamically by width (multi-monitor)
        , persistent        =   True    -- enable/disable hiding (True = disabled)

        -- PLUGINS
        , commands = 
        -- weather monitor
        [ Run Weather "EDDT" [  "--template", "<skyCondition> | <fc=#F92672><tempC></fc>°C | <fc=#F92672><rh></fc>% | <fc=#F92672><pressure></fc> hPa"] 36000

        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork    [   "--template",   "<fn=1>\xf1eb</fn>: <tx>|<rx> kB/s"
                            ,   "--Low"     ,   "1000"        --units: kB/s
                            ,   "--High"    ,   "5000"        --units: kB/s
                            ,   "--high"    ,   "#00FFDD" 
                            ,   "--normal"  ,   "#e0e0e0" 
                            ,   "--low"     ,   "#FF0000" 
                            ] 10

        -- cpu activity monitor
        , Run MultiCpu      [   "--template",   "<fn=1>\xf2db</fn>:<total0>%|<total1>%"
                            ,   "--Low"     ,   "30"        --units: %
                            ,   "--High"    ,   "65"        --units: %
                            ,   "--high"    ,   "#FF0000" 
                            ,   "--normal"  ,   "#00FFDD" 
                            ,   "--low"     ,   "#66aa11" 
                            ,   "--ppad"    ,   "3"
                            ] 10

        -- cpu core temperature monitor
        , Run CoreTemp      [   "--template",   "<fn=1>\xf2c7</fn>: <core0>°C | <core1>°C"
                            ,   "--Low"     ,   "70"        --units: °C
                            ,   "--High"    ,   "80"        --units: °C
                            ,   "--high"    ,   "#FF0000" 
                            ,   "--normal"  ,   "#66aa11" 
                            ,   "--low"     ,   "#00FFDD" 
                            ] 10
        
        -- memory usage monitor
        , Run Memory        [   "--template",   "<fn=1>\xf1c0</fn>: <usedratio>%"
                            ,   "--Low"     ,   "20"        --units: %
                            ,   "--High"    ,   "90"        --units: %
                            ,   "--high"    ,   "#FF0000" 
                            ,   "--normal"  ,   "#66aa11" 
                            ,   "--low"     ,   "#00FFDD" 
                            ] 10

        -- swap monitor
        --, Run Swap          [] 10

        -- battery monitor
        , Run Battery       [   "--template",   "<fn=1>\xf240</fn>: <acstatus>"
                            ,   "--Low"     ,   "20"        --units: %
                            ,   "--High"    ,   "80"        --units: %
                            ,   "--high"    ,   "#66aa11" 
                            ,   "--normal"  ,   "#e0e0e0" 
                            ,   "--low"     ,   "#FF0000" 

                            , "--" --battery specific options
                                    -- discharging status
                                    , "-o"  , "<left>% (<timeleft>)"
                                    -- AC "on" status
                                    , "-O"  , "<fc=#FF0000>Charging</fc>"
                                    -- charged status
                                    , "-i"  , "<fc=#66aa11>Charged</fc>"
                            ] 50

        -- time and date indicator
        --, Run Date "<fc=#0000FF>%a %b %_d %Y %H:%M:%S</fc>" "date" 10
        , Run Date "<fc=#66aa11><fn=1>\xf073</fn> %F (%a) %T</fc>" "date" 10

        -- keyboard layout indicator
        , Run Kbd           [   ("de",  "<fc=#3579a8>DE </fc>")
                            ,   ("gr(polytonic)",  "<fc=#3579a8>GR (polytonic) </fc>")
                            ,   ("fr",  "<fc=#3579a8>FR </fc>")
                            ,   ("es",  "<fc=#3579a8>ES </fc>")
                            ]
        , Run StdinReader
        , Run Volume "default" "Master" [ "--template",  "<fn=1>\xf028</fn> <volume>% <status>" , "--", "-O", "<fc=#66aa11>[on]</fc>"] 10

        ]
        -- LAYOUT
        , sepChar   = "%"   -- delineator between plugin and text
        , alignSep  = "}{"  -- separator between left-right alignment
        , template = "%StdinReader% | %battery% | %multicpu% | %coretemp% | %memory% | %dynnetwork% }{ %default:Master%  %EDDT% | <action=`gnome-calendar`>%date%</action> || <action=`~/dotfiles/bin/layout_switch`>%kbd%</action>"
        }
